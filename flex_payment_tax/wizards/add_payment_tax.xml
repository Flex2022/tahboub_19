<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="add_payment_tax_form" model="ir.ui.view">
            <field name="name">Generate Payment Tax</field>
            <field name="model">add.payment.tax</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="tax_id" options="{'no_create': True, 'no_open': True}"/>
                            </group>
                        </group>
                        <field name="payment_ids" readonly="1" force_save="1"/>
                    </sheet>
                    <footer>
                        <button name="generate_tax_moves" string="Generate Tax Entries" type="object" class="btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id='action_add_payment_tax' model='ir.actions.act_window'>
            <field name="name">Generate Tax Entries</field>
            <field name="res_model">add.payment.tax</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="add_payment_tax_form"/>
            <field name="target">new</field>
            <field name="binding_model_id" ref="account.model_account_payment"/>
        </record>
        <!--        <record id="action_add_payment_tax" model="ir.actions.server">-->
        <!--            <field name="name">Generate Tax Entries</field>-->
        <!--            <field name="model_id" ref="account.model_account_payment"/>-->
        <!--            <field name="binding_model_id" ref="account.model_account_payment"/>-->
        <!--            <field name="state">code</field>-->
        <!--            <field name="code">records.send_multiple_installments()</field>-->
        <!--        </record>-->
    </data>
</odoo>