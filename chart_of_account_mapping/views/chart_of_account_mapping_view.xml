<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="chart_of_account_mapping_form_view" model="ir.ui.view">
        <field name="name">Chart Of Account Mapping</field>
        <field name="model">chart.of.account.mapping</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="code_old"/>
                        <field name="account_name_old"/>
                        <field name="account_account_id"/>
                        <field name="partner_id"/>
                        <field name="analytic_account_id"/>
                        <field name="company_id"/>
                    </group>
                </sheet>
            </form>

        </field>
    </record>

    <record id="chart_of_account_mapping_tree_view" model="ir.ui.view">
        <field name="name">Chart Of Account Mapping</field>
        <field name="model">chart.of.account.mapping</field>
        <field name="arch" type="xml">
            <list string="Chart Of Account Mapping" editable="bottom">
                <field name="code_old"/>
                <field name="account_name_old"/>
                <field name="account_account_id"/>
                <field name="partner_id"/>
                <field name="analytic_account_id"/>
                <field name="company_id" options='{"no_open": True, "no_create": True}'/>
            </list>
        </field>
    </record>

    <record id="chart_of_account_mapping_action" model="ir.actions.act_window">
        <field name="name">Chart Of Account Mapping</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">chart.of.account.mapping</field>
        <field name="view_mode">list,form</field>
        <field name="domain">['|', ('company_id','=',allowed_company_ids[0]), ('company_id','=',None)]</field>
    </record>


    <menuitem id="chart_of_account_mapping"
              name="Chart Of Account Mapping"
              parent="account.account_account_menu"
              action="chart_of_account_mapping_action"
              sequence="1"/>


</odoo>
