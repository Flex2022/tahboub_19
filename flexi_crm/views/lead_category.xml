<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="lead_category_tree" model="ir.ui.view">
            <field name="name">lead.category.tree</field>
            <field name="model">lead.category</field>
            <field name="arch" type="xml">
                <list editable="bottom">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                </list>
            </field>
        </record>

        <record id="lead_category_form" model="ir.ui.view">
            <field name="name">lead.category.form</field>
            <field name="model">lead.category</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="sequence" invisible="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_lead_category" model="ir.actions.act_window">
            <field name="name">Project Categories</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">lead.category</field>
            <field name="view_mode">list</field>
        </record>
        <menuitem id="menu_lead_category" name="Project Categories" action="action_lead_category"
                  parent="crm.crm_menu_config" sequence="30"/>
    </data>
</odoo>
