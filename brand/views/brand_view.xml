<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="brand_view_form" model="ir.ui.view">
            <field name="name">brand.view.form</field>
            <field name="model">brand</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                       <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Brand Name"/>
                        </h1>
                    </div>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="brand_view_tree" model="ir.ui.view">
            <field name="name">brand.view.tree</field>
            <field name="model">brand</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                </list>
            </field>
        </record>

        <record id="brand_actions" model="ir.actions.act_window">
            <field name="name">brand</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">brand</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="brand_menu"
                  name="Brand"
                  parent="stock.menu_product_in_config_stock"
                  action="brand_actions"/>




    </data>
</odoo>
