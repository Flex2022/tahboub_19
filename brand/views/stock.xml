<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_move_search_inherit" model="ir.ui.view">
            <field name="name">view_move_search_inherit</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_search"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='by_product']" position="after">
                    <filter string="Brand" name="by_brand_id" domain="[]" context="{'group_by': 'brand_id'}"/>
                </xpath>
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="brand_id"/>
                </xpath>
            </field>
        </record>
        <record id="stock_move_line_view_search_inherit" model="ir.ui.view">
