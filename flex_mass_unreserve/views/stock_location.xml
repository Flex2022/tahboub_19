<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_location_form_inherit" model="ir.ui.view">
            <field name="name">view_location_form_inherit</field>
            <field name="model">stock.location</field>
            <field name="inherit_id" ref="stock.view_location_form" />
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button name="action_unreserve" type="object" string="Unreserve" class="oe_stat_button text-danger"
                            icon="fa-cube"
                            invisible="usage != 'internal'" groups="stock.group_stock_manager"
                            confirm="All products reserved in selected locations will be unreserved!, Proceed?"/>
                </div>
            </field>
        </record>
    </data>
</odoo>
