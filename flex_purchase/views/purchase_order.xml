<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="purchase_order_form_flex_purchase" model="ir.ui.view">
            <field name="name">purchase_order_form_flex_purchase</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/list/field[@name='name']" position="after">
                    <field name="product_barcode"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>