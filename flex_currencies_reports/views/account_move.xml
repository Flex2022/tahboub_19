<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <!-- Inherit the account.move view and add the new fields -->
        <record id="view_account_move_form_inherited" model="ir.ui.view">
            <field name="name">account.move.form.inherited</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <div name="journal_div" position="after">
                    <label for="additional_currency" groups="base.group_multi_currency"/>
                    <div class="o_row" name="div_additional_currency" groups="base.group_multi_currency">
                        <field name="additional_currency_rate_access" invisible="1"/>
                        <field name="additional_currency_rate" readonly="additional_currency_rate_access == False"/>
                        <field name="additional_currency" readonly="0" options="{'no_create': True}"
                               groups="base.group_multi_currency"/>
                    </div>
                </div>
            </field>
        </record>
    </data>
</odoo>