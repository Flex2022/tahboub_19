<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <!-- Inherit the sale.order view and add the new fields -->
        <record id="view_sale_order_form_inherited" model="ir.ui.view">
            <field name="name">sale.order.form.inherited</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <field name="currency_id" position="after">
                    <field name="currency_id" readonly="0" options="{'no_create': True}"
                           groups="base.group_multi_currency"/>
                    <label for="additional_currency"/>
                    <div class="o_row" name="div_additional_currency">
                        <field name="additional_currency_rate_access" invisible="1"/>
                        <field name="additional_currency_rate"
                               readonly="additional_currency_rate_access == False"/>
                        <field name="additional_currency" readonly="0" options="{'no_create': True}"
                               groups="base.group_multi_currency"/>
                    </div>
                </field>
            </field>
        </record>
    </data>
</odoo>