<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="custom_rate_tree" model="ir.ui.view">
            <field name="name">custom.rate.tree</field>
            <field name="model">custom.rate</field>
            <field name="arch" type="xml">
                <list editable="bottom">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="description"/>
                </list>
            </field>
        </record>

        <record id="custom_rate_form" model="ir.ui.view">
            <field name="name">custom.rate.form</field>
            <field name="model">custom.rate</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="sequence" invisible="1"/>
                        </group>
                        <group string="Description">
                            <field name="description" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_custom_rate" model="ir.actions.act_window">
            <field name="name">Custom Rates</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">custom.rate</field>
            <field name="view_mode">list</field>
        </record>

        <menuitem id="menu_custom_rate_sale" name="Custom Rates" action="action_custom_rate"
                  parent="sale.menu_sale_config" sequence="8"/>

        <menuitem id="menu_custom_rate_stock" name="Custom Rates" action="action_custom_rate"
                  parent="stock.menu_stock_config_settings" sequence="8"/>

    </data>
</odoo>
