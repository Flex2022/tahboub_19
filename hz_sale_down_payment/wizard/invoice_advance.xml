<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="sale_advance_payment_inv_form" model="ir.ui.view">
            <field name="name">Invoice Orders</field>
            <field name="model">sale.advance.payment.inv</field>
            <field name="inherit_id" ref="sale.view_sale_advance_payment_inv"/>
            <field name="priority">100</field>
            <field name="mode">primary</field>
            <field name="arch" type="xml">

                <xpath expr="//label[@for='amount']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//div[@id='payment_method_details']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//field[@name='advance_payment_method']" position="replace">
                    <div colspan="4">
                    <group col="4">
                        <field name="advance_payment_method" widget="selection" readonly="1" force_save="1"/>
                        <field name="payment_journal_id" widget="selection" required="1"
                               domain="[('id', 'in', context.get('allowed_journal_ids', []))]"/>
                        <field name="fixed_amount" required="1"/>
                        <field name="date_accounting" required="1"/>
                        <field name="is_down_payment" invisible="1" force_save="1"/>
                    </group>
                    </div>
                </xpath>

            </field>
        </record>

        <record id="action_sale_advance_payment_inv" model="ir.actions.act_window">
            <field name="name">Register Invoice &amp; Down Payment To Confirm Order</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.advance.payment.inv</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{'default_is_down_payment': True, 'default_advance_payment_method': 'fixed'}</field>
            <field name="view_id" ref="sale_advance_payment_inv_form"/>
        </record>

    </data>
</odoo>
