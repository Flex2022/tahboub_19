<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--    replace journals domain with the one come from context    -->
        <record id="bi_advance_payment_wizard_form_inherit" model="ir.ui.view">
           <field name="name">advacnce.payment.form</field>
            <field name="model">advance.payment</field>
            <field name="inherit_id" ref="bi_sale_advance_payment.advance_payment_wizard_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='journal_id']" position="attributes">
                    <attribute name="domain">[('id', 'in', context.get('allowed_journal_ids', []))]</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
