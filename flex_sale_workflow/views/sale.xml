<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_order_form_inherit" model="ir.ui.view">
            <field name="name">view_order_form_inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_confirm'][2]" position="replace"></xpath>
                <xpath expr="//button[@name='action_confirm'][1]" position="attributes">
                    <attribute name="invisible">state not in ['pre_confirm']</attribute>
                    <attribute name="groups">flex_sale_workflow.group_sale_confirm</attribute>
                </xpath>
                <xpath expr="//button[@name='action_confirm'][1]" position="before">
                    <button name="action_review" type="object" string="Pre-Confirm"
                            class="oe_highlight"
                            invisible="state not in ['draft', 'sent']"/>
                </xpath>

                <xpath expr="//button[@name='action_draft']" position="after">
                    <button name="button_print_manufacturing_orders" type="object" string="Print MRP Costs Analysis"
                            groups="flex_mrp_custom.group_show_cost_analysis"
                            class="oe_highlight"/>
                </xpath>

                <xpath expr="//button[@name='action_cancel']" position="attributes">
                    <attribute name="invisible">state not in ['draft', 'sent', 'pre_confirm', 'sale'] or not id
                    </attribute>
                </xpath>

                <xpath expr="//header/field[@name='state']" position="attributes">
                    <attribute name="statusbar_visible">draft,sent,pre_confirm,sale</attribute>
                </xpath>

                <!--                <xpath expr="//field[@name='state']" position="before">-->
                <!--                    <field name="is_reviewed" invisible="1"/>-->
                <!--                    <button name="mark_as_reviewed" type="object" string="Mark As Reviewed"-->
                <!--                            groups="flex_sale_workflow.group_sale_review" class="oe_highlight"-->
                <!--                            attrs="{'invisible': [('is_reviewed', '=', True)]}"/>-->
                <!--                </xpath>-->

                <xpath expr="//field[@name='order_line']" position="attributes">
                    <attribute name="readonly">state in ['done','cancel','sale']</attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']/list" position="inside">
                    <field name="show_on_hand_qty_status_button" invisible="1"/>
                    <button name="action_open_quants" type="object" class="float-right" icon="fa-cubes" title="On Hand"
                            invisible="not show_on_hand_qty_status_button">
                    </button>
                </xpath>

                <xpath expr="//group[@name='sales_person']/field[@name='user_id']" position="after">
                    <field name="employee_id" widget="many2one_avatar_employee" options="{'no_create': True}"/>
                    <field name="ref_partner_id" options="{'no_create': True}"/>
                </xpath>

                <xpath expr="//field[@name='order_line']/list/field[@name='price_subtotal']" position="after">
                    <field name="flex_is_deliver" widget="boolean_toggle" optional="show"/>
                </xpath>

                <xpath expr="//field[@name='order_line']//list//field[@name='product_id']" position="before">
                    <field name="product_code" optional="show"/>
                    <xpath expr="//field[@name='order_line']//list//field[@name='name']" position="move"/>
                </xpath>

            </field>
        </record>

        <record id="view_order_search_inherit_ref_partner" model="ir.ui.view">
            <field name="name">view_order_search_inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_sales_order_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="employee_id" widget="many2one_avatar_employee"/>
                    <field name="ref_partner_id"/>
                </xpath>
                <xpath expr="//filter[@name='salesperson']" position="after">
                    <filter string="Responsible Employee" name="employee" domain="[]"
                            context="{'group_by': 'employee_id'}"/>
                    <filter string="Responsible Partner" name="responsible_partner" domain="[]"
                            context="{'group_by': 'ref_partner_id'}"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
