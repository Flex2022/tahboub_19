<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_price_mapp" model="ir.ui.view">
            <field name="name">res_config_settings_view_form_price_mapp</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//setting[@id='uom_settings']" position="after">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="use_price_map"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="use_price_map"/>
<!--                            <div class="text-muted">-->
<!--                                - Use price mapping in sale orders. -->
<!--                            </div>-->
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>