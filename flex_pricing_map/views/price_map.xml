<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="price_map_tree" model="ir.ui.view">
            <field name="name">price.map.tree</field>
            <field name="model">price.map</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="percent"/>
                </list>
            </field>
        </record>
        <record id="price_map_form" model="ir.ui.view">
            <field name="name">price.map.form</field>
            <field name="model">price.map</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <label for="percent" string="Price Percent"/>
                                <div class="o_row">
                                    <field name="percent" class="oe_inline"/>
                                    <span class="px-2"> % Of the original price </span>
                                </div>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
