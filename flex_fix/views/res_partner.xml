<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="fix_partner_duplication" model="ir.cron">
            <field name="interval_type">minutes</field>
            <field name="name">Fix Partner Duplication</field>
            <field name="priority">1</field>
            <field name="active">False</field>
            <field name="interval_number">1</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="state">code</field>
            <field name="code">model.action_fix_duplicate()</field>
        </record>

        <record id="action_fix_duplicate" model="ir.actions.server">
            <field name="name">Check Duplicate</field>
            <field name="model_id" ref="model_res_partner"/>
            <field name="binding_model_id" ref="base.model_res_partner"/>
            <!--            <field name="binding_view_types">list</field>-->
            <field name="state">code</field>
            <field name="code">action = model.action_fix_duplicate()</field>
        </record>

    </data>
</odoo>
