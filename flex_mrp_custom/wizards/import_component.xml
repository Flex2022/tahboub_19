<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="import_component_form" model="ir.ui.view">
            <field name="name">Import Component</field>
            <field name="model">import.component</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="warning_btn" invisible="1"/>
                        <field name="filename" invisible="1" force_save="1"/>
                        <group col="4">
                            <field name="file" filename="filename" placeholder="Upload xlsx file"/>
                            <field name="ignore_first_row"/>
                            <field name="import_products_by" widget="radio"/>
                            <field name="import_method" widget="radio"/>
                            <field name="production_id" readonly="1" invisible="1"/>
                        </group>
                        <field name="line_ids" force_save="1" options="{'no_open': True}">
                            <list editable="bottom" create="0" decoration-danger="qty &lt;= 0 or not product_id">
                                <field name="product_id" options="{'no_create': True}" force_save="1"/>
                                <field name="qty" force_save="1"/>
                                <field name="product_uom" force_save="1"/>
                                <field name="wizard_id" invisible="1"/>
                            </list>
                        </field>
                    </sheet>
                    <footer>
                        <button name="action_import" string="Import" type="object" class="btn-primary" icon="fa-upload"
                                confirm="There are some lines that have no product, It will be ignored!"
                                invisible="warning_btn == False"/>
                        <button name="action_import" string="Import" type="object" class="btn-primary" icon="fa-upload"
                                invisible="warning_btn == True"/>
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
