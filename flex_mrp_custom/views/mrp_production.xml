<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="mrp_production_form_view_inherited" model="ir.ui.view">
            <field name="name">mrp_production_form_view_inherited</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='move_byproduct_ids']" position="before">
                    <button name="action_get_sale_product" type="object" string="Get From Sales" icon="fa-gear"
                            invisible="state != 'draft' or not id">
                    </button>
                </xpath>
                <xpath expr="//field[@name='move_raw_ids']" position="before">
                    <button name="action_import_component" type="object" string="Import Components" icon="fa-upload"
                            invisible="state != 'draft' or not id">
                    </button>
                </xpath>
                <xpath expr="//field[@name='move_raw_ids']/list/field[@name='warehouse_id']" position="after">
                    <field name="description_pickingout" optional="hide"/>
                </xpath>
                <xpath expr="//field[@name='move_byproduct_ids']/list/field[@name='warehouse_id']" position="after">
                    <field name="description_pickingout" optional="hide"/>
                </xpath>
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="customer_project_id"/>
                </xpath>
            </field>
        </record>

        <record id="mrp_production_tree_view_inherited" model="ir.ui.view">
            <field name="name">mrp_production_tree_view_inherited</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="customer_project_id"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
