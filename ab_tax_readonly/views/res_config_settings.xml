<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="ab_sale_res_config_settings_view_form_inherit" model="ir.ui.view">
            <field name="name">ab.sale.res.config.settings.form.crm.custom</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//setting[@id='uom_settings']" position="after">
                    <setting class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="is_tax_readonly_sale"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_tax_readonly_sale"/>
                            <div class="text-muted">
                                - Set Tax In Sale Module Readonly.
                            </div>
                        </div>
                    </setting>
                </xpath>
            </field>
        </record>

        <record id="ab_purchase_res_config_settings_view_form_inherit" model="ir.ui.view">
            <field name="name">ab.purchase.res.config.settings.form.crm.custom</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
            <field name="arch" type="xml">
                <xpath expr="//setting[@id='product_matrix']" position="after">
                    <setting class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="is_tax_readonly_purchase"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_tax_readonly_purchase"/>
                            <div class="text-muted">
                                - Set Tax In Purchase Module Readonly.
                            </div>
                        </div>
                    </setting>
                </xpath>
            </field>
        </record>

    </data>
</odoo>