<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="ab_view_order_form" model="ir.ui.view">
            <field name="name">ab.view.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/list/field[@name='tax_ids']" position="before">
                    <field name="is_tax_readonly_sale" column_invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/list/field[@name='tax_ids']" position="attributes">
                    <attribute name="readonly">is_tax_readonly_sale == True</attribute>

                </xpath>
            </field>
        </record>

    </data>
</odoo>