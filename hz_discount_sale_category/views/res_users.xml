<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_users_form_inherit" model="ir.ui.view">
        <field name="name">view_users_form_inherit</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <group name="other_preferences" position="after">
                <group>
                    <group>
                        <label for="restrict_general_discount"/>
                        <div class="o_row">
                            <field name="restrict_general_discount"/>
                            <field name="general_discount_limit"
                                   invisible="not restrict_general_discount"/>

                            <span invisible="not restrict_general_discount">%</span>
                        </div>
                    </group>
                </group>
                <group>
                    <div colspan="2">
                        <field name="restrict_category_discount" class="oe_inline" nolabel="1"/>
                        <label for="restrict_category_discount" class="font-weight-bold"/>
                    </div>
                    <field name="discount_line"
                           nolabel="1"
                           invisible="not restrict_category_discount">
                        <list editable="bottom">
                            <field name="categ_type"/>
                            <field name="limit" widget="percentage"/>
                            <field name="is_enabled" widget="boolean_toggle"/>
                            <field name="user_id" invisible="1"/>
                        </list>
                        <form>
                            <sheet>
                                <group col="4">
                                    <field name="categ_type"/>
                                    <field name="limit" widget="percentage"/>
                                    <field name="is_enabled" widget="boolean_toggle"/>
                                    <field name="user_id" invisible="1"/>
                                </group>
                            </sheet>
                        </form>
                    </field>
                </group>
            </group>
        </field>
    </record>

</odoo>
