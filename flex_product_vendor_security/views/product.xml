<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Inherit Form View to Modify it -->
    <record id="product_template_form_view_inherit_purchase" model="ir.ui.view">
        <field name="name">product_template_form_view_inherit_purchase</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='name']" position="after">
                <field name="is_purchase_admin" invisible="1"/>
            </xpath>
            <xpath expr="//page[@name='purchase']" position="attributes">
<attribute name="invisible">not is_purchase_admin or not purchase_ok</attribute>
            </xpath>
        </field>
    </record>
</odoo>