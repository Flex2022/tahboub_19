<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_spec_form" model="ir.ui.view">
            <field name="name">sale.spec.form</field>
            <field name="model">sale.spec</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="name_ar"/>
                                <field name="spec_type"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="sale_spec_tree" model="ir.ui.view">
            <field name="name">sale.spec.tree</field>
            <field name="model">sale.spec</field>
            <field name="arch" type="xml">
                <list editable="bottom">
                    <field name="name"/>
                    <field name="name_ar"/>
                    <field name="spec_type"/>
                </list>
            </field>
        </record>

        <record id="sale_spec_search" model="ir.ui.view">
            <field name="name">sale.spec.search</field>
            <field name="model">sale.spec</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="name_ar"/>
                    <field name="spec_type"/>

                    <separator/>

                    <filter string="Type" name="gb_type" context="{'group_by': 'spec_type'}"/>
                </search>
            </field>
        </record>

        <record id="sale_spec_action" model="ir.actions.act_window">
            <field name="name">Specification Form</field>
            <field name="res_model">sale.spec</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="sale_spec_tree"/>
        </record>

        <menuitem id="menu_sale_spec" name="Specifications" parent="sale.sale_menu_root" sequence="50"
                  action="sale_spec_action"/>
    </data>
</odoo>