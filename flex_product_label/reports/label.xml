<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
        <template id="flex_report_label_product">
             <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                       <div class="row" style="border-bottom: 1px solid black;">
                           <div class="col-12">
                               <br/>
                               <h5>
                                    <strong>Category:</strong><span style="margin-left:20px;" t-field="o.categ_id"/>
                               </h5>

                           </div>
                       </div>
                        <div class="row" style="border-bottom: 1px solid black;">
                           <div class="col-12">
                               <br/>
                               <h5>
                                    <strong>Name/Description:</strong><span style="margin-left:20px;" t-field="o.name"/>
                               </h5>
                           </div>
                       </div>
                        <t t-if="o.image_1920">
                         <div class="row" >
                           <div class="col-12" style="border-bottom: 1px solid black;">
                               <h5>
                                    <img
                                        t-att-src="image_data_uri(o.image_1920)"
                                        alt="Partner Logo"
                                        style="width: 100px; height: 100px;"/>
                                   <br/>
                               </h5>
                           </div>
                       </div>
                        </t>
                        <t t-if="o.barcode">
                         <div class="row" >
                           <div class="col-12">
                               <br/>
                               <h5>
                                    <strong t-field="o.barcode" t-options="{'widget': 'barcode', 'width': 600, 'height': 120, 'img_style': 'max-height:50pt;max-width:100%;', 'img_align': 'left'}"/>

                               </h5>
                           </div>
                        </div>
                         <br/>
                        </t>

                         <div class="row" style="border-bottom: 1px solid black;border-top: 1px solid black;">
                           <div class="col-12">
                               <br/>
                               <h5>
                                    <strong>Brand:</strong><span style="margin-left:20px;" t-field="o.brand_id"/>
                               </h5>
                           </div>
                       </div>
                         <div class="row" style="border-bottom: 1px solid black;border-top: 1px solid black;">
                           <div class="col-12">
                               <br/>
                               <h5>
                                    <strong>Internal Reference:</strong><span style="margin-left:20px;" t-field="o.default_code"/>
                               </h5>
                           </div>
                       </div>
                        <div class="row" style="border-bottom: 1px solid black;">
                           <div class="col-12">
                               <br/>
                               <h5>
                                    <strong>Company:</strong><span style="margin-left:20px;" t-field="o.company_id"/>
                               </h5>
                           </div>
                       </div>
                        <div class="row">
                           <div class="col-12">
                               <br/>
                               <h5>
                                    <strong>Warehouse:</strong><span style="margin-left:20px;" t-field="o.warehouse_id_in_stock"/>
                               </h5>
                           </div>
                       </div>
                    </div>
                </t>
            </t>
        </template>
        <record id="paperformat_label_product" model="report.paperformat">
            <field name="name">Product Label</field>
            <field name="format">custom</field>
            <field name="page_height">150</field>
            <field name="page_width">100</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
        </record>
        <record id="action_report_product_label_flex" model="ir.actions.report">
            <field name="name">Product Label</field>
            <field name="model">product.template</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">flex_product_label.flex_report_label_product</field>
            <field name="report_file">flex_product_label.flex_report_label_product</field>
            <field name="print_report_name">'Label Print %s' %(object.name)</field>
            <field name="binding_model_id" ref="product.model_product_template"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="paperformat_label_product"/>
        </record>
