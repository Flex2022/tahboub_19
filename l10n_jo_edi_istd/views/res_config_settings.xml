<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="res_config_settings_view_form_jo_istd">
        <field name="name">res.config.settings.view.form.inherit.jo_istd</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='fiscal_localization_setting_container']" position="after">
                <t groups="account.group_account_user">
                    <block title="Accounting Import" name="accounting_istd_setting_container">
                        <setting id="account_istd_settings" name="ISTD E-Invoicing Settings" groups="base.group_erp_manager" invisible="country_code != 'JO'">
                                    <div class="o_setting_left_pane"/>
                                    <div class="o_setting_right_pane">
                                        <span class="o_form_label">ISTD API Integration</span>
                                        <span class="fa fa-lg fa-building-o" title="Values set here are company-specific."
                                              aria-label="Values set here are company-specific." groups="base.group_multi_company"
                                              role="img"/>
                                        <div class="text-muted mt-3">
                                            Set your portal ISTD API credentials to enable ISTD E-Invoicing.
                                            <field name="country_code" invisible="1"/>
                                        </div>
                                        <div class="content-group mt-3">
                                            <div class="row">
                                                <label for="l10n_jo_client_id" class="col-lg-4 o_light_label"/>
                                                <field name="l10n_jo_client_id"
                                                       help="The client ID of the ISTD e-invoicing portal"/>
                                            </div>
                                            <div class="row">
                                                <label for="l10n_jo_client_secret" class="col-lg-4 o_light_label"/>
                                                <field name="l10n_jo_client_secret" password="True" help="The secret key of the ISTD e-invoicing portal"/>
                                            </div>
                                            <div class="row">
                                                <label for="l10n_jo_tax_company_type" class="col-lg-4 o_light_label"/>
                                                <field name="l10n_jo_tax_company_type"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="o_setting_left_pane">
                                        <field name="l10n_jo_send_invoices_at_confirm"/>
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <label for="l10n_jo_send_invoices_at_confirm"/>
                                        <div class="text-muted mt-3">
                                            Once invoice is confirmed, it will be sent to ISTD portal.
                                        </div>
                                    </div>
                        </setting>
                    </block>
                </t>
            </xpath>
        </field>
    </record>

</odoo>
