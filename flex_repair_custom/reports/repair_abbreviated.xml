                            <table class="table table-condensed o_main_table">
                                <thead>
                                    <tr>
                                        <th>Product to Repair</th>
                                        <th>Lot/Serial Number</th>
                                        <th>Quantity</th>
                                        <th>Warranty</th>
                                        <th>Printing Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                        <tr>
                                            <td>
