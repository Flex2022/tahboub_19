        <record id="action_report_repair_abbreviated" model="ir.actions.report">
            <field name="name">Repair Abbreviated</field>
            <field name="model">repair.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">flex_repair_custom.report_abbreviated</field>
            <field name="report_file">flex_repair_custom.report_abbreviated</field>
            <field name="print_report_name">'Repair - %s' % (object.name) </field>
            <field name="binding_model_id" ref="repair.model_repair_order"/>
            <field name="binding_type">report</field>
