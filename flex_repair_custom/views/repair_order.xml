<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_repair_order_form_inherited" model="ir.ui.view">
            <field name="name">view_repair_order_form_inherited</field>
            <field name="model">repair.order</field>
            <field name="inherit_id" ref="repair.view_repair_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group/group[1]/field[@name='product_id']" position="attributes">
                    <attribute name="required">state not in ['draft', 'cancel']</attribute>
                </xpath>

                <xpath expr="//group/group[1]/div/field[@name='product_uom']" position="attributes">
                    <attribute name="required">state not in ['draft', 'cancel']</attribute>
                </xpath>

                <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="service_no" readonly="state != 'draft'"/>
                    <field name="guarantee_limit" readonly="state != 'draft'"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>