<?xml version="1.0" encoding="utf-8" ?>
<odoo>
     <record id="journal_entry_tree_view" model="ir.ui.view">
            <field name="name">journal.entry.view.tree</field>
            <field name="model">import.journal.entry</field>
            <field name="arch" type="xml">
                <list string="Journal Entry" editable="bottom"  decoration-success="state == 'Posted'" decoration-danger="state == 'Draft'">
                    <header>
                        <button name="action_create_journal_entry" string="Create Journal Entry" class="oe_highlight" type="object"/>
                    </header>
                    <field name="unique_identification" />
<!--                    <field name="journal" />-->
                    <field name="reference" />
                    <field name="old_account_code"/>
                    <field name="account_code"/>
                    <field name="partner"/>
                    <field name="label"/>
                    <field name="analytic_account"/>
                    <field name="analytic_tags"/>
                    <field name="debit" sum="Total debit"/>
                    <field name="credit" sum="Total credit"/>
                    <field name="tax"/>
                    <field name="accounting_date"/>
                    <field name="state" widget="badge" decoration-danger="state == 'Draft'" decoration-success="state == 'Posted'"/>
                    <field name="account_move_id" options='{"no_create": True}'/>
                    <field name="company_id" invisible="1"/>
                </list>
            </field>
        </record>
    <record id="action_journal_entry_view" model="ir.actions.act_window">
        <field name="name">Journal Entry View</field>
        <field name="res_model">import.journal.entry</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="journal_entry_tree_view" />
        <field name="domain">[('company_id','=',allowed_company_ids[0])]</field>
    </record>


    <menuitem id="journal_entry_view" name="Journal Entries View" parent="account.menu_finance_receivables" action="action_journal_entry_view" groups="sh_import_journal_entry.sh_import_journal_entry_group" />
</odoo>
