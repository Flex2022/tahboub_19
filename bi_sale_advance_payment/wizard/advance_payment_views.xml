<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="advance_payment_wizard_form">
            <field name="name">advacnce.payment.form</field>
            <field name="model">advance.payment</field>
            <field name="arch" type="xml">
                <form string="Advance payment">
                    <group>
                        <group>
                            <field name="create_invoice" widget="radio"/>
                            <field name="total" invisible="create_invoice != 'full_invoice'"/>
                            <field name="pay_amount"/>
                            <field name="auto_confirm"
                                   invisible="create_invoice != 'full_invoice'"/>
                            <field name="auto_link" invisible="auto_confirm != True"/>
                        </group>
                        <group>
                            <field name="date_planned" date="date_order"/>
                            <field name="journal_id" widget="selection" domain="[('type','in',['bank','cash'])]"/>
                            <field name="company_id" invisible="1"/>
                            <field name="tax_country_id" invisible="1"/>
                            <field name="tax_id" options="{'no_create': True}"
                                   context="{'search_view_ref': 'account.account_tax_view_search'}"
                                   domain="[('type_tax_use','=','sale'), ('company_id','=',company_id), ('country_id', '=', tax_country_id)]"/>
                            <field name="currency_id"/>
                        </group>
                    </group>
                    <footer>
                        <button name="make_payment_and_view_invoice" string="Make Payment And View Invoice"
                                type="object" context="{'open_invoices': True}" class="btn-primary"
                                invisible="create_invoice != 'full_invoice'"/>
                        <button name="make_payment" string="Make Payment" type="object" class="btn-primary"/>
                        <button special="cancel" string="Cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_advance_payment_wizard_form" model="ir.actions.act_window">
            <field name="name">Advance Payment</field>
            <field name="res_model">advance.payment</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
