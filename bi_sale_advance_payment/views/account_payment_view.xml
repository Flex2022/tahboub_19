<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="ab_account_payment">
        <field name="name">ab.account.payment</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <!-- sale button -->
                <button name="button_open_sales" type="object" class="oe_stat_button" icon="fa-bars"
                        invisible="sale_count == 0">
                    <field name="sale_count"/>

                    <span>Sale Order</span>
                </button>
            </xpath>

            <xpath expr="//field[@name='memo']" position="after">
                    <field name="remaining"/>
            </xpath>

            <xpath expr="//field[@name='partner_bank_id']" position="after">
                    <field name="pdc_wizard_id" invisible="pdc_wizard_id == False"/>
            </xpath>

        </field>
    </record>

    <record model="ir.ui.view" id="ab_account_payment_tree">
        <field name="name">ab.account.payment.tree</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="after">
                <field name="remaining"/>
            </xpath>
        </field>
    </record>



</odoo>    
